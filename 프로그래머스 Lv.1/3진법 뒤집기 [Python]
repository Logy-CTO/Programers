def solution(n):
    answer = ""  # 결과를 저장할 빈 문자열
    
    while(n >= 1):  # n이 1 이상일 동안 반복
        rest = n % 3  # n을 3으로 나눈 나머지를 구함
        n = n // 3   # n을 3으로 나눈 몫으로 업데이트
        answer += str(rest)   # 나머지를 문자열로 변환하여 answer에 추가
        
    return int(answer, 3)   # answer를 기저(base)가 3인 숫자 시스템에서 정수로 변환하여 반환
