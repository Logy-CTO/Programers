SELECT 
        b.BOOK_ID as BOOK_ID ,
        a.AUTHOR_NAME as AUTHOR_NAME,
        DATE_FORMAT(b.PUBLISHED_DATE, '%Y-%m-%d') AS PUBLISHED_DATE
FROM BOOK b
LEFT JOIN AUTHOR a ON b.AUTHOR_ID = A.AUTHOR_ID
    WHERE b.CATEGORY = '경제'
ORDER BY b.PUBLISHED_DATE ASC;

Join을 사용하지 않고 
SELECT 
    B.BOOK_ID AS BOOK_ID, 
    A.AUTHOR_NAME AS AUTHOR_NAME, 
    DATE_FORMAT(B.PUBLISHED_DATE, '%Y-%m-%d') AS PUBLISHED_DATE
FROM 
    BOOK B, AUTHOR A
WHERE 
    B.AUTHOR_ID = A.AUTHOR_ID
    AND B.CATEGORY = '경제'
ORDER BY 
    PUBLISHED_DATE ASC;